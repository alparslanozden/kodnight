<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/image_product1"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/iphone11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_product1"
            app:layout_constraintStart_toStartOf="@id/image_product1"
            app:layout_constraintEnd_toEndOf="@id/image_product1"
            android:text="iPhone 11 64 GB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/image_product2"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/iphone11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_product2"
            app:layout_constraintStart_toStartOf="@id/image_product2"
            app:layout_constraintEnd_toEndOf="@id/image_product2"
            android:text="iPhone 11 128 GB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/image_product3"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/iphone13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_product3"
            app:layout_constraintStart_toStartOf="@id/image_product3"
            app:layout_constraintEnd_toEndOf="@id/image_product1"
            android:text="iPhone 12 128 GB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/image_product4"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/iphone13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="iPhone 12 256 GB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/image_product4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/image_product4"
            app:layout_constraintTop_toBottomOf="@+id/image_product4" />








    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

